# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration
DB_PATH=./database.sqlite

# PurgoMalum API (Free profanity filter)
PROFANITY_API_URL=https://www.purgomalum.com/service/containsprofanity

# Bot Configuration
PREFIX=!
BOT_OWNER_ID=your_discord_user_id

# Global Chat Configuration
GLOBAL_CHAT_ENABLED=true
GLOBAL_CHAT_LOG_CHANNEL=your_log_channel_id

# Link Checking Configuration
LINK_CHECK_ENABLED=true
SUSPICIOUS_DOMAINS=discord.gg,bit.ly,tinyurl.com

# Port for Render deployment
PORT=3000